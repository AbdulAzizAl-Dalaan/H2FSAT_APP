<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/ARNG.png" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>H2F</title>
    <style>
      .form-group {
        margin: 100px;
      }

      .content {
        max-width: 1000px;
        margin: auto;
      }
    </style>
  </head>

  <body>
    <%- include('header') %>

    <div class="content">
      <form
        method="post"
        action="/home/<%= survey.survey_id %>/submit"
        class="row g-3"
        onsubmit="return validateForm()"
      >
        <!-- CHANGE TO SURVEY SUBMIT -->
        <% questions.forEach(question=> { %>
        <div class="question-container col-12">
          <% if (question.header !== null) { %>
            <h2><%= question.header %></h2>
          <% } %>

          <h4>
            <% if (survey.show_question_numbers) { %>
              (<%= question.question_id %>)
              &nbsp;&nbsp;
            <% } %>
            <%= question.prompt %>
          </h4>

          <% if (question.img !== null) { %>
          <img
            src="/images/<%= question.img %>"
            width="750px"
            style="display: block; margin: auto;">
          <% } %>

          <% if (question.type==="all" ) { %> <% answers.forEach(answer=> { %>
          &nbsp; <% if (answer.question_id===question.question_id) { %>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="<%= question.question_id %>"
              value="<%= answer.text %>"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              <%= answer.text %>
            </label>
          </div>
          <% } %> <% }) %> 
          
          
          
          <% } else if (question.type==="one" ) { %> <%
          answers.forEach(answer=> { %> &nbsp; <% if
          (answer.question_id==question.question_id) { %>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              id="answer_<%= answer.question_id %>"
              required
              name="<%= question.question_id %>"
              value="<%= answer.text %>"
            />
            <label
              class="form-check-label"
              for="answer_<%= answer.question_id %>"
            >
              <%= answer.text %>
            </label>
          </div>
          <% } %> <% }) %> 
          
          
          
          <% } else if (question.type==="range" ) { %>
          <div class="mb-3">
            <label for="answer_<%= question.question_id %>" class="form-label">
                <%= question.text %>
            </label>
            <input type="number"
                   class="form-control col-6"
                   id="answer_<%= question.question_id %>"
                   required
                   name="<%= question.question_id %>"
                   min="<%= question.bottom_range %>"
                   max="<%= question.top_range %>"
            />
          </div>
          
          
          <% } else { %>
          <div>
            <input
              type="text"
              class="form-control"
              id="answer_<%= question.question_id %>"
              required
              name="<%= question.question_id %>"
              placeholder="Enter your answer here"
            />
            <label for="answer_<%= question.question_id %>">
              <%= question.text %>
            </label>
          </div>
          <% } %>
        </div>
        <% }) %>
        <div class="col-12">
          <input type="submit" value="Submit" class="btn btn-warning" />
        </div>
      </form>

      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"
      ></script>

      <script>
  function validateForm() {
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    if (checkboxes.length === 0) {
      return true;
    }
    let isChecked = false;
    checkboxes.forEach((checkbox) => {
      if (checkbox.checked) {
        isChecked = true;
      }
    });
    if (!isChecked) {
      alert("Please select at least one option for checkbox questions.");
      return false;
    }
    return true;
  }
</script>
    </div>
  </body>
</html>

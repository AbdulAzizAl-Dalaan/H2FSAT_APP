<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/ARNG.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <title>Unit Summary</title>
    <style>
      .form-group {
        margin:10px;
      }

      .content
      {
        max-width: 1200px;
        margin: auto;
      }

    </style>
</head>
<body>
<%- include('header') %>
<div class="content">
    <div class="row mb-3" style="padding-top: 10px">
        <div class="col-12 text-center">
          <h1 style="text-decoration: underline;">Results Page</h1>
        </div>
      </div>
    <p>
        This page should contain information about the unit, including the unit's H2F assessment results.
    </p>

    <% if (survey_results.length === 0) { %>
      <div class="row mb-3" style="padding-top: 10px">
            <div class="col-12 text-center">
              <h3>There are no results to display at this time, please check back later</h3>
            </div>
          </div>
    <% } else { %>
     
    
    <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" style="width:100%">

            <div class="container mt-4">
                <table id="datatable" class="table">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Assessment</th>
                            <th scope="col">Results</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Enter foreach statement with all column row values in here -->
                        <% survey_results.forEach(survey_result => { %>
                            <tr>
                                <td> <%= survey_result.email %> </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </table>
    </div>
</div>
<% } %>

<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function() {
        $('#datatable').DataTable();
    } ); 
</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/ARNG.png">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>H2F</title>
    <style>
      .form-group {
        margin:100px;
      }

      .content
      {
        max-width: 1000px;
        margin: auto;
      }

    </style>
</head>
<body>


<%- include('header') %>

<div class="content">
  <form method="post" action="/h2f/submit" class="row g-3">
    <% questions.forEach((question, index) => { %>
      <% if (index % 2 === 0) { %>
        <div class="col-12">
          <h4 style="text-decoration: underline;"><strong><%= question.category %></strong></h4>
        </div>
      <% } %>
      <div class="question-container col-12">
        <h4>(<%= question.qid %>)&nbsp;&nbsp;<%= question.question %> </h4>
        <% answers.forEach(answer => { %>
          &nbsp;
          <% if (answer.qid == question.qid) { %>
            <div class="form-check">
              <input class="form-check-input" type="radio" id="answer_<%= answer.qid %>" required name="<%= question.qid %>" value="<%= answer.answer %>">
              <label class="form-check-label" for="answer_<%= answer.qid %>"><%= answer.answer %></label>
            </div>
          <% } %>
        <% }) %>
      </div>
    <% }) %>
    <div class="col-12">
      <input type="submit" value="Submit" class="btn btn-warning">
    </div>
  </form>
  

</div>





<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
